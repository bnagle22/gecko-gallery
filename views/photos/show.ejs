<section id="main-photo">
  <!-- <div>title</div> -->
  <img src="<%= photo.image %>" width="600">
  <!-- <p>caption</p> -->
  <% if (photo.owner.equals(user?.profile._id)) { %>
    <form action="/photos/<%= photo._id %>?_method=DELETE" method="POST">
      <button id="delete-btn" class="btn" type="submit">Delete this photo</button>
    </form>
    <form action="/photos/<%= photo._id %>/edit" method="GET">
      <button id="edit-btn" class="btn" type="submit">Edit this photo</button>
    </form>
  <% } %>
</section>
